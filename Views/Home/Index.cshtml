@model MeetingInfo
@{
    ViewBag.Title = "Toplantı Başvuru";
    Layout = "_Layout2";
}
<main class="text-center">
<h1 class="h4">@ViewBag.Selamlama</h1>

<p>Toplantı katılımını bildirin</p>

<div class="card my-2">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Location</li>
        <li class="list-group-item">@Model.Date.ToString("dd/MM/yyyy HH:mm:ss ") Tarihinde Gerçekleşecek</li>
        <li class="list-group-item">@Model.NumberOfPeople Kişi Katılacak</li>
    </ul>
</div>
<a class="btn-sm btn btn-outline-primary" asp-controller="Meeting" asp-action="Apply">Başvuru Yap</a>

</main>