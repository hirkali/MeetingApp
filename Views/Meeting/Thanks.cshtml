@model UserInfo
@{
    ViewBag.Title = "Başvuru Durumu";
}
<main class="text-center">
<h1 class="h4">Başvuru Durumu</h1>

    @if (Model.WillAttend == true)
    {
        <p>Teşekkürler @Model.Name , toplantıya @ViewBag.UserCount kişi katılıyor</p>
        <a class="btn btn-sm btn-outline-primary">Katılımcıları Listele</a>
    }
    else
    {
        <p>@Model.Name , Katılamadığın için canın sağolsun</p>
        <a href="/meeting/apply" class="btn btn-sm btn-outline-primary">Başvuru Formu</a>

    }

</main>